@model Films.Models.FilmsListModel

@{
    ViewData["Title"] = "List";
}

<h1>List</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<div class="row">
    <div class="col-2">   
        @Html.Partial("_Filter", Model.FilmsFilter)
    </div>
    <div class="col-10">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Films.First().Id)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Films.First().Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Films.First().Director)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Films.First().ReleaseDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Films.First().Categories);
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Films)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Director)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ReleaseDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CategoriesStr)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                            @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>   
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script src="~/js/CategoriesSelector.js" asp-append-version="true"></script>
    <script src="~/js/Filter.js" asp-append-version="true"></script>
}
