@model Films.Models.EditCategoryModel

@{
    ViewData["Title"] = "Add";
}

<h1>Add</h1>

<h4>EditCategoryModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Add">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>          
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.ParentCategoryId, htmlAttributes: new { @class = "control-label" })
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.ParentCategoryId, new SelectList(Model.AllCategories.ToDictionary(x => x.Id, x => x.Name), "Key", "Value"), "--Select--", new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ParentCategoryId, "", new { @class = "text-danger" })
                </div>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
